		{{- else }}
			buf.WriteString(fmt.Sprintf(", {{ $f.Name }}=%v", {{ $receiver }}.{{ pascal $f.Name }}))
		{{- end }}
	{{- end }}
	buf.WriteString(")")
	return buf.String()
}

