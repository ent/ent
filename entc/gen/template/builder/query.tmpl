// Only returns the only {{ $.Name }} entity in the query, returns an error if not exactly one entity was returned.
func ({{ $receiver }} *{{ $builder }}) Only(ctx context.Context) (*{{ $.Name }}, error) {
	nodes, err := {{ $receiver }}.Limit(2).All(ctx)
	if err != nil {
		return nil, err
