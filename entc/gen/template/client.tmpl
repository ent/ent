	return &{{ $n.QueryName }}{
		config: c.config,
		ctx: &QueryContext{Type: {{ $n.TypeName }} },
		inters: c.Interceptors(),
		{{- with $tmpls := matchTemplate (printf "dialect/%s/query/fields/init/*" $.Storage) }}
