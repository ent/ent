// Mutate implements the ent.Mutator interface.
func (c *Client) Mutate(ctx context.Context, m Mutation) (Value, error) {
	switch m := m.(type) {
	{{- range $n := $.Nodes }}
		case *{{ $n.MutationName }}:
			return c.{{ $n.Name }}.mutate(ctx, m)
	{{- end }}
	default:
		return nil, fmt.Errorf("{{ $pkg }}: unknown mutation type %T", m)
	}
}

