			return fromV, nil
		}
		return query
	{{- else }}
		{{- /* For edge schema, we use the predicate-based approach. */}}
		return c.Query().
			Where({{ range $id := $n.EdgeSchema.ID }}{{ $n.Package }}.{{ $id.StructField }}({{ $arg }}.{{ $id.StructField }}),{{ end }}).
			{{ $func }}()
	{{- end }}
